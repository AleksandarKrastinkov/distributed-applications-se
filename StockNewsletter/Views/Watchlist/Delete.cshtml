@model StockNewsletter.Models.WatchList
@{
    ViewData["Title"] = "Delete Watchlist Item";
}
<h2>@ViewData["Title"]</h2>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Stock Symbol: @Model.StockSymbol</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Notes</dt>
        <dd class="col-sm-10">@Model.Notes</dd>
        <dt class="col-sm-2">Date Added</dt>
        <dd class="col-sm-10">@Model.DateAdded.ToString("yyyy-MM-dd")</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </form>
</div> 